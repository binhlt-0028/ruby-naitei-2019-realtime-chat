<div id="NewRoomModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><%= t ".create_room" %></h4>
      </div>
      <%= form_for Room.new, remote: true do |f| %>
        <div class="modal-body">
          <div>
            <%= f.number_field :room_type, class: "hidden",
              value: Settings.room.type.public_room %>
          </div>
          <div class="form-group">
            <%= f.text_field :name, autofocus: true,
              class: "form-control", placeholder: "Room name" %>
          </div>
          <div class="form-group">
            <%= f.text_area :description, rows: Settings.form.text_area_rows,
            class: "form-control p-10", placeholder: "Room's description...." %>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit t(".create"), class: "btn btn-primary" %>
          <button type="button" class="btn btn-default" data-dismiss="modal">
            <%= t ".close" %>
          </button>
        </div>
      <% end %>
    </div>

  </div>
</div>

<div id="InviteModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Invite user</h4>
      </div>
        <div class="modal-body">
          <div class="form-group">
            <label>Invite username</label>
            <input type="text" class="form-control" name="inviteName" id="inviteName">
          </div>
          <%= hidden_field_tag "inviteRoomId", @current_room.id if @current_room %>
          <table class="table" id="inviteResultList">
          </table>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    </div>

  </div>
</div>
